{
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["**/*.hbs"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["*.js"],
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": ["**/*.css", "**/*.scss", "**/*.html"],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "useTabs": false,
  "trailingComma": "none",
  "printWidth": 80,
  "bracketSameLine": true,
  "arrowParens": "avoid"
}