<div class="users-board">
  {{{UserCard
    onClick=goToProfilePage
    avatarSrc=avatarSrc
    displayName=displayName
  }}}

  <div class="users-board__control">
    <button
      type="button"
      class="users-board__control_button_change svg"
    ></button>
    <input type="text" class="users-board__control_input input" />
  </div>

  <div class="users-board__list scrollbar">
    {{#each usersData}}
      {{{UserCard
        avatarSrc=avatarSrc
        online=online
        displayName=displayName
        lastMessage=lastMessage
        activeTime=activeTime
        receivedMessages=receivedMessages
      }}}
    {{/each}}
  </div>
</div>
